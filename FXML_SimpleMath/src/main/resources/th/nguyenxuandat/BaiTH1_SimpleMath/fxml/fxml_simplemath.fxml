<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
			fx:controller="/th/nguyenxuandat/BaiTH1_SimpleMath/controller/SimpleMathController" 
            prefWidth="360" prefHeight="640">
    <VBox spacing="15" alignment="CENTER" prefWidth="360" prefHeight="640">
        <Label text="Simple Math" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />
        
        <HBox spacing="5" alignment="CENTER">
            <Label text="Nhập số A:" style="-fx-font-size: 14px;" />
            <TextField promptText="Nhập số A" />
        </HBox>
        
        <HBox spacing="5" alignment="CENTER">
            <Label text="Nhập số B:" style="-fx-font-size: 14px;" />
            <TextField promptText="Nhập số B" />
        </HBox>

        <Label text="Chọn phép toán:" style="-fx-font-size: 14px;" />
        <VBox spacing="10" alignment="CENTER">
            <RadioButton text="+" toggleGroup="$operatorGroup" />
            <RadioButton text="-" toggleGroup="$operatorGroup" />
            <RadioButton text="*" toggleGroup="$operatorGroup" />
            <RadioButton text="/" toggleGroup="$operatorGroup" />
        </VBox>

        <Button text="Calculate" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
        
        <Label fx:id="resultLabel" text="Result: " style="-fx-font-size: 16px; -fx-text-fill: blue;" />
    </VBox>
</AnchorPane>