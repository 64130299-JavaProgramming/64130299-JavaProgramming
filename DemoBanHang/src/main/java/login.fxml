<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane style="-fx-background-color: #FD7014;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
    <!-- VBox chứa giao diện đăng nhập -->
    <VBox alignment="CENTER" maxWidth="400.0" prefHeight="300.0" prefWidth="350.0" spacing="20" style="-fx-background-color: #ffffff; -fx-padding: 30; -fx-border-radius: 15; -fx-background-radius: 15;">
        
        <!-- Tiêu đề -->
        <Text style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #4A90E2;" text="Welcome Back!" />
        
        <!-- Trường nhập tên người dùng -->
        <TextField fx:id="usernameField" prefWidth="250" promptText="Username" style="-fx-background-color: #f9f9f9; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-padding: 10;" />
        
        <!-- Trường nhập mật khẩu -->
        <PasswordField fx:id="passwordField" prefWidth="250" promptText="Password" style="-fx-background-color: #f9f9f9; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-padding: 10;" />
        
        <!-- Nút Đăng nhập -->
        <Button onAction="#handleLogin" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12 25; -fx-border-radius: 5;" text="Login">
            <effect>
                <DropShadow color="#4A90E2" radius="5" />
            </effect>
        </Button>
        
        <!-- Thông điệp quên mật khẩu -->
        <Text style="-fx-font-size: 12px; -fx-fill: #7d7d7d;" text="Forgot your password?" />
    </VBox>
</StackPane>
