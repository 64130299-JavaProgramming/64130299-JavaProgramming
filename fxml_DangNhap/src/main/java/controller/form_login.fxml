<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="244.0" prefWidth="367.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="controller.LoginController">
    <children>
        <Label layoutX="100.0" layoutY="20.0" text="Đăng Nhập" textAlignment="CENTER" />
        <TextField fx:id="usernameField" layoutX="100.0" layoutY="70.0" promptText="Tên đăng nhập" />
        <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="120.0" promptText="Mật khẩu" />
        <Button layoutX="100.0" layoutY="170.0" onAction="#handleLogin" text="Đăng Nhập" />
        <Label fx:id="errorMessage" layoutX="100.0" layoutY="210.0" textFill="red" />
    </children>
</AnchorPane>
